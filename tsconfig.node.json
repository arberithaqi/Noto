{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2015", "DOM"],
    "esModuleInterop": true,
    "target": "ES2015"
  },
  "include": ["src/main/**/*.ts", "src/shared/**/*.ts"]
} 